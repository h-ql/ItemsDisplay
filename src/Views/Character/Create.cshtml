@model ItemsDisplay.Models.Character
@inject IConfiguration Config

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4> @Config["GameCharacterType"]</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attribute" class="control-label"></label>
                <input asp-for="Attribute" class="form-control" />
                <span asp-validation-for="Attribute" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AttackType" class="control-label"></label>
                <input asp-for="AttackType" class="form-control" />
                <span asp-validation-for="AttackType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label" for="exampleFormControlTextarea1"></label>
                    
                <textarea asp-for="Description" class="form-control" id="exampleFormControlTextarea1" rows="5">
                   
                </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImgURL" class="control-label"></label>
                <input asp-for="ImgURL" class="form-control" />
                <span asp-validation-for="ImgURL" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
