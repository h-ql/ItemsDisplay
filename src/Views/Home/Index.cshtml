@model IEnumerable<ItemsDisplay.Models.Character>
@inject IConfiguration Configuration

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-3"><strong>Display @Configuration["GameCharacterType"] character information </strong></h1>
</div>

<hr>
<div class="row">
    <div class="col">
        <a asp-controller="Character" asp-action="Create"  
        class="btn btn-success btn-lg btn-block text-uppercase">Add Hero</a>
    </div>
</div>

<hr>
<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-xl-4 g-4">
    @foreach (var item in Model)
    {
       <partial name="_ItemCard" model="item" />
    }   
</div>